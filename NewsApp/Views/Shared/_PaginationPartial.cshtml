@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model PagingInfo

<div class="pagination">
    @if (Model.CurrentPage > 1)
    {
        <a asp-action="Index" asp-route-page="1" class="btn btn-outline-primary">@Localizer["First"]</a>
        <a asp-action="Index" asp-route-page="@(Model.CurrentPage - 1)" class="btn btn-outline-primary">@Localizer["Back"]</a>
    }
    
    @for (var i = 1; i <= Model.TotalPages; i++)
    {
        if (i == Model.CurrentPage)
        {
            <span class="btn btn-primary">@i</span>
        }
        else
        {
            <a asp-action="Index" asp-route-page="@i" class="btn btn-outline-primary">@i</a>
        }
    }
    
    @if (Model.CurrentPage < Model.TotalPages)
    {
        <a asp-action="Index" asp-route-page="@(Model.CurrentPage + 1)" class="btn btn-outline-primary">@Localizer["Next"]</a>
        <a asp-action="Index" asp-route-page="@Model.TotalPages" class="btn btn-outline-primary">@Localizer["Last"]</a>
    }
</div>
<div>
    @Localizer["Page"] @Model.CurrentPage @Localizer["From"] @Model.TotalPages
</div>