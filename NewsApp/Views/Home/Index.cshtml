@model List<NewsItem>;

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    @{
        if (Model.Count > 0)
        {
            <div class="row">
                @foreach (var newsItem in Model)
                {
                    <div class="col-md-4 mb-4">
                        <div class="card">
                            <img src="@newsItem.PathToImage" alt="@newsItem.PathToImage">
                            <div class="card-body">
                                <h5 class="card-title">@newsItem.Title</h5>
                                <h6 class="card-subtitle mb-2 text-muted">@newsItem.SubTitle</h6>
                                <a class="btn btn-primary" asp-controller="News" asp-action="Details" asp-route-id="@newsItem.Id">View
                                    details</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    }
</div>