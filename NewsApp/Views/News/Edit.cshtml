@model NewsItem

@{
    ViewData["Title"] = "Edit";
}

<!DOCTYPE html>

<html>
<head>
    <title>title</title>
</head>
<body>
<div>
    <a class="btn btn-primary" asp-action="Index">Back to all news</a>
    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label for="Title">Title</label>
            <input type="text" class="form-control" asp-for="Title"/>
        </div>

        <div class="form-group">
            <label for="SubTitle">SubTitle</label>
            <input type="text" class="form-control" asp-for="SubTitle"/>
        </div>

        <div class="form-group">
            <label for="Title">Content</label>
            <input type="text" class="form-control" asp-for="Content"/>
        </div>

        <div class="form-group">
            <label for="ImageFile">Image</label>
            <input type="file" class="form-control" asp-for="ImageFile"/>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
</body>
</html>